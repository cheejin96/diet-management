<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.cheejin.fyp.MainActivity">

    <TextView
        android:id="@+id/userNameLable"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/userName"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="32dp"
        android:text="Username:"
        android:textColor="@color/colorBlack"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/userPassLable"
        android:textColor="@color/colorBlack"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/exercName"
        android:layout_below="@+id/userName"
        android:layout_marginTop="15dp"
        android:text="Password:"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="307dp" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/exercName"
        android:layout_alignStart="@+id/userPassLable"
        android:layout_below="@+id/userNameLable"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="256dp" />

    <EditText
        android:id="@+id/exercName"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/loginBtn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userPassLable"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="342dp" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/exercName"
        android:layout_below="@+id/exercName"
        android:layout_marginTop="18dp"
        android:text="Register"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="404dp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorPrimary"
        />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="141dp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/registerBtn"
        android:layout_alignBottom="@+id/registerBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:text="Login"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="404dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="197dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/healthandhealthyliving_logo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="7dp" />

</RelativeLayout>
