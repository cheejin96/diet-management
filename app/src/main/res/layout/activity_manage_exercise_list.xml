<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:textSize="20dp">

        <TextView
            android:id="@+id/exerciseNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodLabel"
            android:layout_marginTop="10dp"
            android:text="Name:"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/exercName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/exerciseNameLabel"
            android:layout_toEndOf="@+id/exerciseNameLabel"
            android:text="TextView"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/caloriesBurnLabel"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/exercName"
            android:layout_marginTop="5dp"
            android:text="Calories burned (30 min):"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/caloriesBurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/caloriesBurnLabel"
            android:layout_toEndOf="@+id/caloriesBurnLabel"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/foodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="24dp"
            android:text="Exercise"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/caloriesBurnLabel"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:textColor="@color/colorBlack"
            android:text="Duration (min):" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="24dp" />

        <Button
            android:id="@+id/removeBtn"
            android:background="@color/colorWhite"
            android:textColor="@color/colorRed"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:text="remove" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/baseline_keyboard_backspace_black_18dp"
        android:background="@color/colorWhite"/>
</RelativeLayout>